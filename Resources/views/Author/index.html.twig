{% extends "TwitterBootstrapBundle::layout.html.twig" %}

{% block container -%}
    {% include 'FDevsCRUDBundle:Default:menu.html.twig' %}
    <h1>Author list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Fname</th>
                <th>Lname</th>
                <th>Birthday</th>
                <th>About</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('author_show', { 'id': entity.id }) }}">{{ entity.fname }}</a></td>
                <td>{{ entity.lname }}</td>
                <td>{% if entity.birthday %}{{ entity.birthday|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.about }}</td>
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('author_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('author_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('author_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
