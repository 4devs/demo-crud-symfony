<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="publisher" path="/">
        <default key="_controller">FDevsCRUDBundle:Publisher:index</default>
    </route>

    <route id="publisher_show" path="/{id}/show">
        <default key="_controller">FDevsCRUDBundle:Publisher:show</default>
    </route>

    <route id="publisher_new" path="/new">
        <default key="_controller">FDevsCRUDBundle:Publisher:new</default>
    </route>

    <route id="publisher_create" path="/create">
        <default key="_controller">FDevsCRUDBundle:Publisher:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="publisher_edit" path="/{id}/edit">
        <default key="_controller">FDevsCRUDBundle:Publisher:edit</default>
    </route>

    <route id="publisher_update" path="/{id}/update">
        <default key="_controller">FDevsCRUDBundle:Publisher:update</default>
        <requirement key="_method">post|put</requirement>
    </route>

    <route id="publisher_delete" path="/{id}/delete">
        <default key="_controller">FDevsCRUDBundle:Publisher:delete</default>
        <requirement key="_method">post|delete</requirement>
    </route>

</routes>
