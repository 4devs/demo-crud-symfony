<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="author" path="/">
        <default key="_controller">FDevsCRUDBundle:Author:index</default>
    </route>

    <route id="author_show" path="/{id}/show">
        <default key="_controller">FDevsCRUDBundle:Author:show</default>
    </route>

    <route id="author_new" path="/new">
        <default key="_controller">FDevsCRUDBundle:Author:new</default>
    </route>

    <route id="author_create" path="/create">
        <default key="_controller">FDevsCRUDBundle:Author:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="author_edit" path="/{id}/edit">
        <default key="_controller">FDevsCRUDBundle:Author:edit</default>
    </route>

    <route id="author_update" path="/{id}/update">
        <default key="_controller">FDevsCRUDBundle:Author:update</default>
        <requirement key="_method">post|put</requirement>
    </route>

    <route id="author_delete" path="/{id}/delete">
        <default key="_controller">FDevsCRUDBundle:Author:delete</default>
        <requirement key="_method">post|delete</requirement>
    </route>

</routes>
